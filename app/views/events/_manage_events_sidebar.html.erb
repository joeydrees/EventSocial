<% if current_user.id == @event.user_id %>
	<%= link_to "Delete Event", "#", method: :delete, :class => "button small subscribe-button", data: { confirm: 'Are you sure you want to delete this event?' } %>
	<br />
<% end %>
<h5 class="side-nav-title">My Events</h5>
<ul class="side-nav events-list" id="my-events-list">
	<% @events.each do |event| %>
		<% event_id = Event.find(event.id) %>
			<li><%= link_to "##{event.hashtag}", event_manage_events_path(event), method: :get %>
	<% end %>
</ul>