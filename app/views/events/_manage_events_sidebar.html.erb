<% if current_user.id == @event.user_id %>
	<%= link_to "Delete Event", {:controller=>"events", :action => "destroy", :id => "#{@event.id}"}, method: :delete, :class => "button small manage-delete-button", data: { confirm: 'Are you sure you want to delete this event?' } %>
<% end %>
<%= link_to "View Tweets", event_tweets_path(@event), method: :get, class: "button small subscribe-button" %>
<%= link_to "View Comments", event_comments_path(@event), method: :get, class: "button small subscribe-button" %>
<br />
<h5 class="side-nav-title">My Events</h5>
<ul class="side-nav events-list" id="my-events-list">
	<% @events.each do |event| %>
		<% event_id = Event.find(event.id) %>
			<li><%= link_to "##{event.hashtag}", event_manage_events_path(event), method: :get %>
	<% end %>
</ul>