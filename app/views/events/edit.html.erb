<div class="row">
	<div class="small-12 columns new-event">
		<h2>Edit Event</h2>
		<%= render 'edit_form' %>
		<% if current_user.id == @event.user_id %>
			<%= button_to "Delete Event", {:controller=>"events", :action => "destroy"}, method: :delete, :class => "button small delete-button", data: { confirm: 'Are you sure you want to delete this event?' } %>
			<br />
		<% end %>
	</div>
</div>