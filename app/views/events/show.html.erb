<div class="row">
	<div class="small-12 columns">
		<% if @event.event_pic_file_name.present? %>
			<%= image_tag @event.event_pic.url(:medium), :class=>"event-banner" %>
		<% end %>
	</div>
</div>
<div class="row show-for-large-only">
	<div class="large-6 columns">
		<h1><strong><%= @event.name %></strong></h1>
		<h3><strong>#<%= @event.hashtag %></strong></h3>
	</div>
	<div class="large-4 columns">
		<br />
		<script language="javascript" type="text/javascript">
			var eventCountdown = new Countdown(
			{
				year	: <%= @year %>,
				month	: <%= @month %>, 
				day		: <%= @day %>,
				hour    : <%= @hour %>,
				minute  : <%= @minute %>,
				width	: 300, 
				height	: 50,
				hideLine: true,
				rangeHi : "day",

				numbers	: 
				{
					color  : "#7FB800",
					bkgd   : "#2274A5"
				}
				
			});
		</script>
	</div>
</div>
<div class="row hide-for-large-up">
	<div class="small-12 columns">
		<h1 class="text-center"><strong><%= @event.name %></strong></h1>
		<h3 class="text-center"><strong>#<%= @event.hashtag %></strong></h3>
		<br />
		<div align="center">
		<script language="javascript" type="text/javascript">
			var eventCountdown = new Countdown(
			{
				year	: <%= @year %>,
				month	: <%= @month %>, 
				day		: <%= @day %>,
				hour    : <%= @hour %>,
				minute  : <%= @minute %>,
				width	: 300, 
				height	: 50,
				hideLine: true,
				rangeHi : "day",

				numbers	: 
				{
					color  : "#7FB800",
					bkgd   : "#2274A5"
				}
				
			});
		</script>
		</div>
	</div>
</div>
<br />
<div class="row">
	<div class="small-12 columns">
		<p class="text-center">
			<strong>Event Date</strong>: <%= @event.event_date %><br />
			<% if @event.event_time[11..12].to_i > 12 %>
				<% hour = @event.event_time[11..12].to_i - 12 %>
				<strong>Start Time</strong>: <%= hour %><%= @event.event_time[13..15] %> PM<br />
			<% elsif @event.event_time[11..12].to_i < 12 && @event.event_time[11..12].to_i >= 10 %>
				<strong>Start Time</strong>: <%= @event.event_time[11..15]%> AM<br />
			<% elsif @event.event_time[11..12].to_i == 0 %>
				<% hour = @event.event_time[11..12].to_i + 12 %>
				<strong>Start Time</strong>: <%= hour %><%= @event.event_time[13..15] %> AM<br />
			<% else %>
				<strong>Start Time</strong>: <%= @event.event_time[12..15]%> AM<br />
			<% end %>
			<strong>Number of Subscribers</strong>: <%= @event.subscribers.count %><br />
			<strong>Event Manager</strong>:&nbsp;
			<% email = User.find(@event.user_id).email %>
            <% username = User.find(@event.user_id).username %>
            <% if email.blank? %>
                <td><%= username %></td>
            <% else %>
                <td><%= email %></td>
            <% end %>
		</p>
		<div class="panel event-description">
			<h4>Description</h4>
			<hr>
			<br />
			<p><%= @event.description %></p>
		</div>
		<%= link_to "View Tweets", event_tweets_path(@event), method: :get, class: "button small unsubscribe-button" %>
		<% if current_user.id == @event.user_id %>
			<%= link_to "Edit Event", "/events/#{@event.id}/edit", method: :get, class: "button small unsubscribe-button" %>
		<% elsif current_user.subscribed?(@event) %>
			<%= link_to "Unsubscribe", "/events/#{@event.id}/unsubscribe", method: :get, class: "button small unsubscribe-button" %>
		<% else %>
			<%= link_to "Subscribe", "/events/#{@event.id}/subscribe", method: :get, class: "button small unsubscribe-button" %>
		<% end %>
	</div>
</div>