<div class="row">
	<div class="small-12 columns">
		<% if @event.event_pic_file_name.present? %>
			<%= image_tag @event.event_pic.url(:medium), :class=>"event-banner" %>
		<% end %>

		<!-- Countdown dashboard start -->
		<div id="countdown_dashboard">
			<div class="dash weeks_dash">
				<span class="dash_title">weeks</span>
				<div class="digit">0</div>
				<div class="digit">0</div>
			</div>

			<div class="dash days_dash">
				<span class="dash_title">days</span>
				<div class="digit">0</div>
				<div class="digit">0</div>
			</div>

			<div class="dash hours_dash">
				<span class="dash_title">hours</span>
				<div class="digit">0</div>
				<div class="digit">0</div>
			</div>

			<div class="dash minutes_dash">
				<span class="dash_title">minutes</span>
				<div class="digit">0</div>
				<div class="digit">0</div>
			</div>

			<div class="dash seconds_dash">
				<span class="dash_title">seconds</span>
				<div class="digit">0</div>
				<div class="digit">0</div>
			</div>

		</div>
		<!-- Countdown dashboard end -->

		<h3 class="text-center"><strong><%= @event.name %></strong></h3>
		<h5 class="text-center"><strong>#<%= @event.hashtag %></strong></h5>
		<p class="text-center"><strong>Description</strong>: <%= @event.description %></p>
		<p class="text-center"><strong>Event Date</strong>: <%= @event.event_date %><br />
			<% if @event.event_time[11..12].to_i > 12 %>
				<% hour = @event.event_time[11..12].to_i - 12 %>
				<strong>Start Time</strong>: <%= hour %><%= @event.event_time[13..15] %> PM<br />
			<% elsif @event.event_time[11..12].to_i == 0 %>
				<% hour = @event.event_time[11..12].to_i + 12 %>
				<strong>Start Time</strong>: <%= hour %><%= @event.event_time[13..15] %> AM<br />
			<% else %>
				<strong>Start Time</strong>: <%= @event.event_time[12..15]%> AM<br />
			<% end %>
			<strong>Number of Subscribers</strong>: <%= @event.subscribers.count %><br />
			<strong>Event Manager</strong>:&nbsp;
			<% email = User.find(@event.user_id).email %>
            <% username = User.find(@event.user_id).username %>
            <% if email.blank? %>
                <td><%= username %></td>
            <% else %>
                <td><%= email %></td>
            <% end %>
		</p>             
		<% if current_user.id == @event.user_id %>
			<%= link_to "Edit Event", "/events/#{@event.id}/edit", method: :get, class: "button small unsubscribe-button" %>
		<% elsif current_user.subscribed?(@event) %>
			<%= link_to "Unsubscribe", "/events/#{@event.id}/unsubscribe", method: :get, class: "button small unsubscribe-button" %>
		<% else %>
			<%= link_to "Subscribe", "/events/#{@event.id}/subscribe", method: :get, class: "button small unsubscribe-button" %>
		<% end %>
	</div>
</div>

<script language="javascript" type="text/javascript">
	jQuery(document).ready(function() {
		var eventDate = "<%= @event.event_date %>";
		var dates = eventDate.split(" ");
		var month = getMonthNumber(dates[0]);
		var day = parseInt(dates[1].substring(0, dates[1].length - 1));
		var year = parseInt(dates[2]);

		var eventTime = "<%= @event.event_time %>";
		console.log(eventTime);
		$('#countdown_dashboard').countDown({
			targetDate: {
				'day': 		day,
				'month': 	month,
				'year': 	year,
				'hour': 	0,
				'min': 		0,
				'sec': 		0
			}
		});
	});

	function getMonthNumber(monthName) {
		if (monthName === "January") {
			return 1;
		}
		else if (monthName === "February") {
			return 2;
		}
		else if (monthName === "March") {
			return 3;
		}
		else if (monthName === "April") {
			return 4;
		}
		else if (monthName === "May") {
			return 5;
		}
		else if (monthName === "June") {
			return 6;
		}
		else if (monthName === "July") {
			return 7;
		}
		else if (monthName === "August") {
			return 8;
		}
		else if (monthName === "September") {
			return 9;
		}
		else if (monthName === "October") {
			return 10;
		}
		else if (monthName === "November") {
			return 11;
		}
		else if (monthName === "December") {
			return 12;
		}
		else
			return -1;
	}
</script>