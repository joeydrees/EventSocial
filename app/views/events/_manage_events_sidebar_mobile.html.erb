<ul class="off-canvas-list" id="mobile-events-list">
	<% if current_user.id == @event.user_id %>
		<li><%= link_to "Delete Event", "#", method: :delete, data: { confirm: 'Are you sure you want to delete this event?' } %></li>
	<% end %>
	<li><%= link_to "View Tweets", event_tweets_path(@event), method: :get %></li>
	<li><%= link_to "View Comments", event_comments_path(@event), method: :get %></li>
	<li><label>My Events</label></li>
	<% @events.each do |event| %>
		<% event_id = Event.find(event.id) %>
			<li><%= link_to "##{event.hashtag}", event_manage_events_path(event), method: :get %>
	<% end %>
</ul>