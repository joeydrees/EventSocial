<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class="row sign-up-content">
    <div class="small-12 columns">
        <h2>Sign up</h2>
        <div class="row">
          <div class="small-12 medium-8 large-6 medium-centered columns">
            <% if f.object.email_required? %>
              <%= f.email_field :email, autofocus: true, placeholder: "Email" %>
            <% end %>
            <% if f.object.password_required? %>
              <%= f.password_field :password, autocomplete: "off", placeholder: "Password" %>
              <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm Password" %>
            <% end %>
            <%= f.submit "Sign up", class: "button small signup-button" %>
            <p class="text-center">Or</p>
            <%= link_to image_tag("sign-in-with-twitter.png", :alt => 'Sign Up With Twitter', :class => 'twitter-login'), omniauth_authorize_path(:user, :twitter) %>
            <p class="already-user text-center">Already have an account?: <%= link_to "Log in", new_session_path(resource_name) %></p>
          </div>
        </div>
    </div>
  </div>
<% end %>