<div class="row show-for-medium-up">
	<div class="medium-4 columns">
		<% if @user.profile.profile_pic_file_name.present? %>
			<%= image_tag @user.profile.profile_pic.url(:medium), :class=>"profile-picture" %>
		<% else %>
			<%= image_tag("profile-placeholder.png", :class=>"profile-picture") %>
		<% end %>
	</div>
	<div class="medium-6 columns">
		<h1><%= @user.profile.first_name %> <%= @user.profile.last_name %></h1>
		<h4><%= image_tag("job-icon.png", :class=>"job-icon") %><%= @user.profile.occupation %></h4>
		<div class="panel about-me">
			<h4>About Me</h4>
			<p><%= @user.profile.about_me %></p>
		</div>
	</div>
	<div class="medium-2 columns">
		<h4 class="side-nav-title">My Events</h4>
		<ul class="side-nav events-list" id="my-events-list">
			<% @events.each do |event| %>
				<% event_id = Event.find(event.id) %>
				<li><%= link_to "##{event.hashtag}", "/events/#{event.id}", method: :get %>
			<% end %>
		</ul>
	</div>
</div>

<div class="row show-for-small-only">
	<div class="small-12 columns">
		<% if @user.profile.profile_pic_file_name.present? %>
			<%= image_tag @user.profile.profile_pic.url(:medium), :class=>"profile-picture" %>
		<% else %>
			<%= image_tag("profile-placeholder.png", :class=>"profile-picture") %>
		<% end %>
		<h1 class="text-center"><%= @user.profile.first_name %> <%= @user.profile.last_name %></h1>
		<h4 class="text-center"><%= image_tag("job-icon.png", :class=>"job-icon") %><%= @user.profile.occupation %></h4>
		<div class="panel about-me">
			<h4>About Me</h4>
			<p><%= @user.profile.about_me %></p>
		</div>
		<h3 class="side-nav-title text-center">My Events</h3>
		<ul class="side-nav events-list" id="my-events-list">
			<% @events.each do |event| %>
				<% event_id = Event.find(event.id) %>
				<li class="text-center"><%= link_to "##{event.hashtag}", "/events/#{event.id}", method: :get %>
			<% end %>
		</ul>
	</div>
</div>