		<% else %>
			<%= image_tag("profile-placeholder.png", :class=>"profile-picture") %>
		<% end %>
		<h1 class="text-center"><%= @user.profile.first_name %> <%= @user.profile.last_name %></h1>
		<h4 class="text-center"><%= image_tag("job-icon.png", :class=>"job-icon") %><%= @user.profile.occupation %></h4>
		<div class="panel about-me">
			<h4>About Me</h4>
			<p><%= @user.profile.about_me %></p>
		</div>
	</div>
</div>